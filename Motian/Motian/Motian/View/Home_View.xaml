                                                <Image Source="iconcard" Grid.Row="0" Grid.Column="0"
                                                   WidthRequest="25"></Image>

                                                <StackLayout Grid.Row="0" Grid.Column="1"
                                                         VerticalOptions="CenterAndExpand">
